<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thi_img1"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/thi_img2"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/thi_img3"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/thi_img4"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/thi_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_radius"
        android:text="开始"
        app:layout_constraintBottom_toBottomOf="@+id/thi_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thi_editText"
        app:layout_constraintTop_toTopOf="@+id/thi_editText" />

    <EditText
        android:id="@+id/thi_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="number|text"
        android:maxLength="30"
        android:text="请输入表达式"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thi_img2" />

    <TextView
        android:id="@+id/thi_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/thi_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thi_img2" />

    <Button
        android:id="@+id/thi_back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不想玩了"
        app:layout_constraintBottom_toBottomOf="@+id/thi_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thi_next"
        app:layout_constraintTop_toTopOf="@+id/thi_next" />

    <Button
        android:id="@+id/thi_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一个"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/thi_back_to_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thi_editText"
        app:layout_constraintVertical_bias="0.466" />

</android.support.constraint.ConstraintLayout>